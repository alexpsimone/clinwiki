{
  "settings": {
    "import/resolver": {
      "typescript": {} // this loads <rootdir>/tsconfig.json to eslint
    }
  },
  "extends": ["react-app", "eslint-config-airbnb"],
  "rules": {
    "semi": 2,
    "arrow-parens": [2, "as-needed"]
  },
  "overrides": [
    {
      "files": [
        "**/*.ts?(x)"
      ],
      "rules": {
        "array-callback-return": "off",
        "eqeqeq": "off",
        "react/jsx-filename-extension": [1, { "extensions": [".tsx"] }]
      }
    }
  ]
}
